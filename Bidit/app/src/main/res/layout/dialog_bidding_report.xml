<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <android.widget.Button
            android:id="@+id/btn_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rect_transparent_white_smoke_trans70_radius13_stroke0"
            android:fontFamily="@font/notosans_kr_regular"
            android:includeFontPadding="false"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/content_report"
            android:textColor="@color/red_orange"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_rect_trasparent_white_radius13_stroke0"
            android:fontFamily="@font/notosans_kr_regular"
            android:includeFontPadding="false"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="@string/content_close"
            android:textColor="@color/persian_blue"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_report" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>