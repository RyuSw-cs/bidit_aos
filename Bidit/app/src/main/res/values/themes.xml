<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bidit" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="home_category_tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="home_category_selected" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/notosans_kr_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_category_unselected" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/notosans_kr_medium</item>
        <item name="android:textColor">@color/nobel</item>
    </style>

    <style name="home_detail_category_tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sliver</item>
        <item name="fontFamily">@font/notosans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="custom_time_picker">
        <!-- 텍스트 컬러 -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Divider 컬러 -->
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:background">@color/white</item>
        <item name="fontFamily">@font/notosans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialogTransparentBackgroundTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogTransparentBackground</item>
    </style>

    <style name="BottomSheetDialogTransparentBackground" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>